
# this is  a nginx general config for every service  . use this before you create a an ssl cert for certbot.Then go to " after ssl cert generation with certbot folder"
# after you have created your ssl cert


server {
    listen 80;
    server_name yourdomain.com;

    location / {
        proxy_pass http://127.0.0.1:port; #select the port of your service
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
